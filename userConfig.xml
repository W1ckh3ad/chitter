<userConfig>
    <maxUser value="15" />
    <passwordRules>
        <length>
            <min value="8" />
            <max value="16" />
        </length>
        <number>
            <characters value="0123456789" />
            <min value="1" />
        </number>
        <lowerCase>
            <characters value="abcdefghijklmnopqrstuvwxyzß" />
            <min value="1" />
        </lowerCase>
        <upperCase>
            <characters value="ABCDEFGHIJKLMNOPQRSTUVWXYZSS" />
            <min value="1" />
        </upperCase>
        <specialCharacter>
            <characters value="^´+#-.,°!§$%/()=?`*'_:;²³{[]}\~|@€" />
            <min value="1" />
        </specialCharacter>
    </passwordRules>
</userConfig>